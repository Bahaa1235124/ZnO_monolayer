&CONTROL
  calculation = 'bands'
  outdir = './out/files/'
  prefix = 'ZnO'
  pseudo_dir = '../pseudo/'
  etot_conv_thr = 1.0D-5
  forc_conv_thr = 1.0D-4
  verbosity = 'high'
/

&SYSTEM
  ibrav = 0
  nat = 18
  nosym = .false.
  ntyp = 2
  occupations = 'smearing'
  smearing = 'gaussian'
  degauss =   0.002
  ecutrho =   600
  ecutwfc =   60
  nspin=2
  starting_magnetization(1)=-0.5
  starting_magnetization(2)=0.5
  input_dft = 'vdW-DF2'
  nbnd = 130
/

&ELECTRONS
    conv_thr = 1.0D-10
    mixing_beta = 0.3
    electron_maxstep=1000
    diagonalization = 'ppcg'
    diago_full_acc = .true.
!    diago_thr_init=1.0D-15
!    startingpot = 'file'
/

&IONS
  ion_dynamics = 'bfgs'
  upscale=1000
/

&CELL
    cell_dynamics = 'bfgs'
    press_conv_thr = 0.01
/


